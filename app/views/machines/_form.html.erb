
<div class="span6">
  <%= form_for(@machine, :html=> {:class => 'form-stacked'}) do |f| %>
    <% if @machine.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@machine.errors.count, "error") %> prohibited this machine from being saved:</h2>

        <ul>
        <% @machine.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

    <fieldset>
      <div class="clearfix">
        <%= f.label :name, 'Name (required)' %>
        
        <div class="input">
          <%= f.text_field :name %>
        </div>
      </div>

      <div class="clearfix">
        <%= f.label :slug, 'Public URL (required)' %>
        <div class="input">
          <div class="input-prepend">
            <span class="add-on">https://cafezinho.herokuapp.com/at/</span>
            <%= f.text_field :slug, :class => 'medium' %>
          </div>
          
        </div>
      </div>
  
      <div class="clearfix">
        <%= f.label :description %>
        <div class="input">
          <%= f.text_field :description, class: 'xlarge'  %>
        </div>
      </div>
      
      <div class="clearfix">
        <%= f.label :icon, "Icon URL" %>
        <div class="input">
          <%= f.text_field :icon, class: 'xlarge' %>
        </div>
      </div>
      
      <div class="clearfix">
        <%= f.label :brand_id, 'Brand' %>
        <div class="input">
          <%= f.collection_select :brand_id, Brand.all, :id, :name, :include_blank => true  %>
        </div>
      </div>
    </fieldset>

    <div class="actions">
      <%= f.submit class: 'btn primary'%>
      <%= link_to 'Cancel', machines_path, class: 'btn' %>
    </div>
  <% end %>
</div>
