<div class="span6">
  <%= form_for(@brand, :url => admin_brands_path, :html=> {:class => 'form-stacked'}) do |f| %>
    <% if @brand.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@brand.errors.count, "error") %> prohibited this coffee type from being saved:</h2>

        <ul>
        <% @brand.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
