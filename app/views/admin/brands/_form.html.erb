    <% end %>

    <fieldset>
      <div class="clearfix">
        <%= f.label :name %>
        <div class="input">
          <%= f.text_field :name %>
        </div>
      </div>
            
      <!-- <div class="clearfix">
        <%#= f.label :icon, "Icon URL" %>
