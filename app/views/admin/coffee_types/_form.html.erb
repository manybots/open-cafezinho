<div class="span6">
  <%= form_for(@coffee_type, :url => admin_coffee_types_path, :html=> {:class => 'form-stacked'}) do |f| %>
    <% if @coffee_type.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@coffee_type.errors.count, "error") %> prohibited this coffee type from being saved:</h2>

        <ul>
        <% @coffee_type.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

    <fieldset>
      <div class="clearfix">
        <%= f.label :name %>
        <div class="input">
          <%= f.text_field :name %>
        </div>
      </div>
      
      <div class="clearfix">
        <%= f.label :brand_id, 'Brand' %>
        <div class="input">
          <%= f.collection_select :brand_id, Brand.all, :id, :name, :include_blank => true  %>
        </div>
      </div>
      
      <div class="clearfix">
        <%= f.label :icon, "Icon URL" %>
        <div class="input">
          <%= f.text_field :icon, class: 'xlarge' %>
        </div>
      </div>
      
    </fieldset>

    <div class="actions">
      <%= f.submit class: 'btn primary'%>
      <%= link_to 'Cancel', admin_coffee_types_path, class: 'btn' %>
    </div>
  <% end %>
</div>